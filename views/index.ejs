<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Book Directory</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9"
      crossorigin="anonymous"
    />
  </head>
  <body class="w-100 h-100 bg-info  "  >
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">Book Directory</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="#">Home</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="main container d-flex flex-column align-items-center w-100">
      <form
        action="/upload"
       method="post"
        class="border container d-flex  flex-column gap-2 p-2 w-50 my-5 bg-light"
      >
        <label for="floatingInputValue">Book Title</label>
        <input name="title" class="w-30" type="text" placeholder="Book Title" />

        <label for="floatingInputValue">Author Name</label>
        <input name="authorName" type="text" placeholder="Author Name" />

        <!-- <label for="floatingInputValue">Book Type</label>
        <input type="text" placeholder="Book Type" />
        <label for="floatingInputValue">Number of Pages</label>
        <input type="number" placeholder="Number of Pages" />
        <label for="floatingInputValue">Rating</label>
        <input type="number" placeholder="Rating" /> -->

        <label for="floatingInputValue">Web Link</label>
        <input name="pages" type="number" placeholder="Pages" />

        <button type="submit" class="btn btn-primary">Update Book</button>
      </form>
    </div>

   <div class="result d-flex justify-content-center   my-3 ">
      <div class="card w-50 d-flex flex-column border shadow gap-4  ">
        <% posts.forEach(function(post,index){ %>
        <div class="card-header d-flex justify-content-between ">
          <ul class="list-unstyled">
            <li>Title</li>
            <p><%= post.title%></p>
          </ul>

          <ul class="d-flex gap-2 list-unstyled"> 
            <a href="/deleteProduct/<%= post.id %>"><button>Delete</button></a>
            <a href="/updateProduct/<%=post._id%>"><button>Update</button></a>
          </ul>
        </div>
        <div class="card-body d-flex justify-content-between p-2">
          <ul  class="list-unstyled">
            <li>Title</li>
            <p><%= post.title%></p>
          </ul>
          
          <ul  class="list-unstyled">
            <li>Author</li>
            <p><%= post.authorName%></p>
          </ul>
           <ul  class="list-unstyled">
            <li>No of Pages</li>
            <p><%= post.pages%></p>
          </ul>

        
        </div>
        <%})%>
      </div>
    </div>



  </body>
</html>

